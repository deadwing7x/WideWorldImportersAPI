@model WebApplication1.Models.Sales
@{
    ViewBag.Title = "Index";
}
<html>
<body>
    <h3>Enter a year between 2013 - 2016 to view the Sales data by State Province : </h3>
    @using (Html.BeginForm("GetTotalSalesByStateProvinceForAYear", "Sales", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td style="padding-right:10px">Year</td>
                <td> </td>
                <td>
                    @Html.TextBoxFor(m => m.year)
                </td>
                <td style="padding-left:20px">@Html.ActionLink("Submit", "", null, new { @id = "submit" })</td>
            </tr>
        </table>
    }
    <br />
    <h3>Enter a year between 2013 - 2016 to view the Sales data by Color : </h3>
    @using (Html.BeginForm("GetTotalSalesByColor", "Sales", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <td style="padding-right:10px">Year</td>
                <td>
                    @Html.TextBoxFor(m => m.year)
                </td>
                <td style="padding-left:20px">@Html.ActionLink("Submit", "", null, new { @id = "submit" })</td>
            </tr>
        </table>
    }
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#submit").click(function () {
                document.forms[0].submit();
                return false;
            });
        });
    </script>
</body>
</html>